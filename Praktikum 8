bilangan = ''
pembagi = ''

def Pembagi_Prima(pembagi):
    pembagi = 2
    return pembagi

def Bilangan_Prima(bilangan):
    bilangan = input ("masukkan bilangan: ")
    bilangan = int(bilangan)
    pembagi = 2
    while bilangan % pembagi != 0: 
          pembagi = pembagi +1    
    if pembagi == bilangan:
         print("bilangan",bilangan, "adalah bilangan prima")  
    else:
        print("bilangan",bilangan,  "bukan bilangan prima")
    

Bilangan_Prima(bilangan)
